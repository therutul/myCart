<!doctype html>
<html lang="en">
<head>
    <%-include('head')-%>
</head>
<body>
    <!--https://nest-frontend-v6.netlify.app/-->
    <%-include('header')%>
  <section class="container flex mx-auto" id="regPage">
    <div class="w-1/2 flex flex-col justify-center items-center">
      <img src="img/Boost your immune system-bro.svg" class="w-3/4" alt="">
    </div>
    <div class="w-1/2 flex flex-col justify-center">

      <% if (success_messages.length > 0) { %>
        <div class="bg-teal-200 mt-5 flex items-center w-3/4 text-gray-900 rounded-lg p-4 alert" role="alert">
          <span><span class="font-bold">Success:</span> <%= success_messages[0] %></span>
        </div>
      <% } %>

      <% if (error_messages.length > 0) { %>
        <div class="bg-red-200 w-3/4 mt-5 flex items-center text-gray-900 rounded-lg p-4 alert" role="alert">
          <span><span class="font-bold">Error:</span> <%= error_messages[0] %></span>
        </div>
      <% } %>
      <h1 class="text-4xl mt-4 font-bold">Create an Account</h1>
      <h5 class="text-slate-500 text-sm mt-3 font-semibold">Already have an account <a href="/login">Login</a></h5>
      <form action="/register" method="POST" class="w-full">
        <br>
        <input name="userName" autocomplete="off" type="text" class="border w-3/4 p-3" placeholder="Username"><br><br>
        <input name="userEmail" autocomplete="off" type="text" class="border w-3/4 p-3" placeholder="Email"><br><br>
        <input name="userPassword" autocomplete="off" type="text" class="border w-3/4 p-3" placeholder="Password"><br><br>
        <input autocomplete="off" type="text" class="border w-3/4 p-3" placeholder="Confirm Password"><br><br>
        <input type="checkbox"> <label class="text-slate-500 text-sm font-medium" for="">I agree to <a href="">Terms & Policy</a></label><br><br>
        <button type="submit" class="rounded py-3 w-32">Register</button>
        <br><br>
      </form>
      <a href="" class="text-sm font-semibold">Forgot Password?</a>
      <p class="text-xs text-slate-500 mt-3 w-3/4">Note:Your personal data will be used to support your experience throughout this website, to manage access to your account, and for other purposes described in our privacy policy</p>
      


      
    </div>
  </section>
</body>
</html> 